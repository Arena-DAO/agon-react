{
	"search.exclude": {
		"**/.yarn": true
	},
	"files.associations": {
		"*.css": "tailwindcss",
		"*.env.development": "env",
		"*.env.production": "env",
		"*.env": "env"
	},
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit"
	},
	"[env]": {
		"editor.defaultFormatter": "IronGeek.vscode-env"
	}
}
